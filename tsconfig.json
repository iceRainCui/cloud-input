{
	"compilerOptions": {
    "outDir": "dist",
		"strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["ES2016", "DOM"],
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowJs": true
	},
	"include": ["./src/**/*", "example/**/*", "./global.d.ts"]
}
